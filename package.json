{
	"name": "solver",
	"displayName": "Solver",
	"description": "Solhint (Solidity linter) support for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onLanguage:solidity"
	],
	"main": "./out/extension.js",
	"contributes": {
    "configuration": {
      "title": "Solver",
      "properties": {
        "solver.delay": {
          "type": "number",
          "default": 500,
          "description": "After editing the current file, the extension will wait before triggering another linting."
        },
        "solver.warningStyle": {
          "type": "object",
          "default": {
            "border": "1px solid #f39c12",
            "borderStyle": "dashed"
          },
          "description": "The style applied to the warnings."
        },
        "solver.errorStyle": {
          "type": "object",
          "default": {
            "border": "1px solid #c0392b",
            "borderStyle": "dashed"
          },
          "description": "The style applied to the errors."
        },
        "solver.config": {
          "type": "object",
          "default": {
            "extends": "solhint:default",
            "plugins": [],
            "rules": {
              "quotes": "warn",
              "const-name-snakecase": "off",
              "avoid-suicide": "error",
              "avoid-sha3": "warn",
              "avoid-tx-origin:": "warn",
              "not-rely-on-time": "warn",
              "not-rely-on-block-hash": "warn",
              "space-after-comma": "warn",
              "no-spaces-before-semicolon": "warn"
            }
          },
          "description": "This configuration will be used if solhint.js file is missing."
        }
      }
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"solhint": "^2.2.0"
	}
}
